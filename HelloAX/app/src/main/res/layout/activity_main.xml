<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.sommerpanage.helloax.app.MainActivity">

    <ImageView
        android:id="@+id/header_image"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/header_height"
        android:layout_centerHorizontal="true"
        android:src="@drawable/dots"
        android:contentDescription="@string/ax_header"
        android:nextFocusRight="@+id/plus_button"/>
    <!--android:importantForAccessibility="no"/>-->
<!--Or do the above if you decide you want TB to ignore it.-->

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_below="@id/header_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:layout_marginBottom="@dimen/activity_button_bottom_margin">

        <Button style="@style/AppTheme.MinusButton"
            android:id="@+id/minus_button"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/button_minus"
            android:src="@android:drawable/btn_minus"
            android:contentDescription="@string/ax_button_minus"/>

        <Button
            android:id="@+id/clear_button"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="Clear"
            android:src="@android:drawable/btn_minus"/>

        <ImageButton
            android:id="@id/plus_button"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:src="@android:drawable/ic_input_add"
            android:contentDescription="@string/ax_button_plus"/>

    </LinearLayout>

    <com.sommerpanage.helloax.app.DotView style="@style/AppTheme.Dots"
        android:id="@+id/dot_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linear_layout"
        android:focusable="true"/>

</RelativeLayout>
