<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
    </style>

    <style name="AppTheme.MinusButton">
        <item name="android:textSize">@dimen/activity_button_text_size</item>
        <item name="android:textColor">@color/minusTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Dots">
        <item name="com.sommerpanage.helloax.app:dotColor1">@color/yellowDotColor</item>
        <item name="com.sommerpanage.helloax.app:dotColor2">@color/redDotColor</item>
        <item name="com.sommerpanage.helloax.app:dotColor3">@color/blueDotColor</item>
        <item name="com.sommerpanage.helloax.app:dotColor1Name">@string/dotColor1_name</item>
        <item name="com.sommerpanage.helloax.app:dotColor2Name">@string/dotColor2_name</item>
        <item name="com.sommerpanage.helloax.app:dotColor3Name">@string/dotColor3_name</item>
        <item name="com.sommerpanage.helloax.app:dotRadius">20sp</item>
    </style>

</resources>
